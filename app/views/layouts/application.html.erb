<!DOCTYPE html>
<html>
  <head>
    <title>ShopifyChallenge</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

    <header>
      <%= link_to "Home", root_path %>
      <div class ="login">
        <% if current_user %>
          <h1> Welcome <%= current_user.username %></h1>
          <%= link_to "My Images", images_user_path(current_user) %>
          <%= link_to "Log Out", logout_path %>
        <% else %>
          <%= link_to "Register", registration_path, class: 'button1' %>
          <%= link_to "Login", login_path, class: 'button2' %>
        <% end %>
      </div>
    </header>
  <body>
    <ul id="flash-messages" >
      <% flash.each do |notice, messages| %>
        <% if messages.class == Array %>
          <p><%= messages.to_sentence %></p>
        <% else %>
          <p><%= messages%></p>
         <% end %>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
